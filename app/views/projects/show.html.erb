<p style="color: green"><%= notice %></p>
<%= stylesheet_link_tag 'title.css' %>
  <div class="fullscreen">
  <div class="columns is-centered mt-6">
      <%= render @project %>
    <div class="box">
    <% if current_user == @project.user || current_user.admin %>
      <%= link_to "Edit", edit_project_path(@project), class:"button is-success"%>
      <%= button_to "Destroy", @project, method: :delete, class:"button is-danger" %>
    <% end %>
    <%= link_to "Back to projects", projects_path, class:"button is-primary" %>
    </div>
  </div>
</div>
