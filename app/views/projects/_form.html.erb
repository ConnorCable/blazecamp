<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, style: "display: block", class:"label" %>
    <%= form.text_field :title, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :description, style: "display: block", class:"label" %>
    <%= form.text_area :description, class:"input" %>
  </div>

  <div class="field is-grouped">
      <%= form.submit class:"button is-primary mr-1"%>
      <%= link_to "Back to Projects", projects_path, class:"button is-link" %>
  </div>
<% end %>
