<div id="<%= dom_id project %>">
  <div class="card my-2">
  <header class="card-header has-background-primary-dark">
    <p class="card-header-title has-text-light is-size-5">
      <%= project.title %>
    </p>
    <button class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </button>
  </header>
  <div class="card-content has-background-grey-lighter">
    <div class="content">
      <%= project.description %>
      <br>
      <strong>Author: <%= project.user.username%></strong>
    </div>
  </div>
  <footer class="card-footer has-text-centered has-background-primary ">
    <p class="card-footer-item ">
      <%= link_to "More", project, class: "has-text-light" %>
    </p>
  </footer>
</div>
</div>
