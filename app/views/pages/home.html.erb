<%= stylesheet_link_tag 'title.css' %>

<div class="background">
    <div class="fullscreen"> 

        <div class="title has-text-white is-size-1 is-family-primary">
            Basecamp
        </div>
        <div>
            <% if !user_signed_in? %>
                <button class="button is-large is-info mr-3"><%= link_to 'Sign In', new_user_session_path, class: "has-text-white" %></button>
                <button class="button is-large is-info"> <%= link_to 'Sign Up', new_user_registration_path, class: "has-text-white"%></button>
            <% else %>
                <button class="button is-large is-info mr-3"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"has-text-white"%></button>
                <button class="button is-large is-info mr-3"><%= link_to 'Projects', "/projects", class:"has-text-white" %></button>
            <% end %>
            
        </div>

    </div>
</div>